<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Post detail</h2>
    </div>
    <div class="col-md-6">
      <%= image_tag @post.image_id.url, size: "500x400" %>
      <% if @user == current_user %>
      <%= link_to "削除する", post_delete_confirm_path(@post.id), class: "btn btn-secondary btn-sm" %>
      <% end %>
    </div>
    <div class="col-md-6">
      <table>
        <tr>
          <td>Title</td>
          <td><%= @post.title %></td>
        </tr>
        <tr>
          <td>Country</td>
          <td><%= @post.country %></td>
        </tr>
        <tr>
          <td>Text</td>
          <td><%= @post.text %></td>
        </tr>
      </table>
      <h2>Comment</h2>
    </div>
  </div>
</div>