<div class="col-md-5">
  <table>
    <% users.slice(0..7).each do |user| %>
      <tr>
        <td class="col-md-1">
          <%= link_to user_path(user.id), class: "user-link" do %>
          <%= image_tag user.image_id.url, class: "user-image", size: "60x50" %>
          <% end %>
        </td>
        <td></td>
        <td class="col-md-3"><%= user.name %></td>
        <td></td>
        <td class="col-md-3">
          <% unless current_user == user %>
            <% if current_user.following?(user) %>
              <%= link_to "Unfollow", unfollow_path(user.id), method: :delete, class: "btn btn-danger btn-sm no-follow" %>
            <% else %>
              <%= link_to "Follow", follow_path(user.id), method: :post, class: "btn btn-primary btn-sm px-3 yes-follow" %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
