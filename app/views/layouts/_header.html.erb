<header class="mb-5">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <a class="navbar-brand" href="/">ITUKA</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <div class="flash ml-5 pl-5"><%= flash[:notice] %></div>
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "MyPage", user_path(current_user.id), class: "nav-link text-dark" %>
            </li>
            <li class="nav-item">
              <%= link_to "Posts", posts_path, class: "nav-link text-dark" %>
            </li>
            <li class="nav-item">
              <%= link_to "Users", users_path, class: "nav-link text-dark" %>
            </li>
            <li class="nav-item">
              <%= link_to "Logout", logout_path, method: :delete, class: "nav-link text-dark" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "About", about_path, class: "nav-link text-dark" %>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン", login_path, class: "nav-link text-dark" %>
            </li>
            <li class="nav-item">
              <%= link_to "ゲストログイン(閲覧用)", guest_sign_in_path, method: :post, class: "nav-link text-dark" %>
            </li>
            <li class="nav-item">
              <%= link_to "新規登録", signup_path, class: "nav-link text-dark" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>