<div class="container">
  <div class="row">
    <div class="col-md-4 col-sm-1"></div>
    <div class="col-md-5 col-sm-11 mt-5 pt-3">
      <h2 class="mb-4">Log in</h2>
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
          <div class="field">
            <table>
              <tr>
                <td><%= f.label :email, "メールアドレス" %></td>
                <td class="col-md-1 col-sm-1"></td>
                <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mb-2" %></td>
              </tr>
              <tr>
                <td><%= f.label :password, "パスワード" %></td>
                <td></td>
                <td><%= f.password_field :password, autocomplete: "current-password" %></td>
              </tr>
              <tr>
                <td></td>
                <td></td>
                <td>
                  <% if devise_mapping.rememberable? %>
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  <% end %>
                </td>
              </tr>
            </table>
          </div>
          <div class="actions mt-3 text-center">
            <%= f.submit "ログインする", class: "btn btn-success btn-sm px-4" %>
          </div>
        <% end %>
      <p class="text-center mt-2">登録がお済みでない方は<%= link_to "こちら", signup_path %></p>
    </div>
  </div>
</div>


