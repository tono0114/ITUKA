<div class="container">
  <div class="row">
    <div class="col-12">
      <h2>Users</h2>
    </div>
    <div class="col-md-12">
      <% @users.each do |user| %>
      <div class="col-md-6">
        <table>
          <tr>
            <td class="col-md-1">
              <%= link_to user_path(user.id) do %>
              <%= image_tag user.image_id.url, class: "user-image", size: "60x50" %>
              <% end %>
            </td>
            <td></td>
            <td class="col-md-3"><%= user.name %></td>
            <td></td>
            <td class="col-md-3">Follow</td>
          </tr>
        </table>
      </div>
      <div class="col-md-6"></div>
      <% end %>
    </div>
    <div class="col-md-12">
      <%= paginate @users %>
    </div>
  </div>
</div>