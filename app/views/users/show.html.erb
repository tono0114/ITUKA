<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2><%= @user.name %>'s Page</h2>
    </div>
    <div class="col-md-5">
      <h4>Profile</h4>
      <%= image_tag @user.image_id.url, size: "300x320" %>
      <%= @user.introduction %>
      <% if false %>
      <table>
        <tr>
          <td>フォロー</td>
          <td><%= @user.followed_id.count %></td>
        </tr>
        <tr>
          <td>フォロワー</td>
          <td><%= @user.follower_id.count %></td>
        </tr>
      </table>
      <% end %>
      <div class="col mt-5">
      <%= link_to "ユーザー情報を編集する", edit_user_path(@user.id), class: "btn btn-outline-dark btn-sm" %>
      </div>
    </div>
    <div class="col-md-7">
      <h4>Post's list</h4>
      <div class="user_posts">
        <% @user.posts.each do |post| %>
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.image_id.url, class: "mr-2 mb-2", size: "200x150" %>
          <% end %>
        <% end %>
      <%= paginate @posts %>
      </div>
    </div>
  </div>
</div>