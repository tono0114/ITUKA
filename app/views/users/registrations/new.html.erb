<div class="container">
  <div class="row">
    <div class="col-md-4 col-sm-1"></div>
    <div class="col-md-5 col-sm-11 mt-5 pt-3">
      <h2 class="mb-4">Sign up</h2>
        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
            <div class="field">
              <table>
                <tr>
                  <td><%= f.label :name, "ニックネーム" %></td>
                  <td class="col-md-1 col-sm-1"></td>
                  <td><%= f.text_field :name, autofocus: true %></td>
                </tr>
                <tr>
                  <td><%= f.label :email, "メールアドレス" %></td>
                  <td></td>
                  <td><%= f.email_field :email, autocomplete: "email" %></td>
                </tr>
                <tr>
                  <td>
                    <%= f.label :password, "パスワード" %>
                    <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %>文字以上)</em>
                    <% end %>
                  </td>
                  <td></td>
                  <td><%= f.password_field :password, autocomplete: "new-password" %></td>
                </tr>
                <tr>
                  <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
                  <td></td>
                  <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
                </tr>
              </table>
            </div>
          <div class="actions mt-3 mr-5 pr-3  text-right">
            <%= f.submit "登録する", class: "btn btn-success btn-sm px-5" %>
          </div>
        <% end %>
      <p class="text-right mt-2 mr-4">すでに登録済みの方は<%= link_to "こちら", login_path %></p>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>


