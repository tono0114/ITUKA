<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= form_with model: @user, url: user_path(@user.id), local: true do |f| %>
      <div class="col-md-6">
        <%= f.file_field :image_id, class: "img_field", style: "display:none" %>
        <%= image_tag @user.image_id.url, onClick: "$('.img_field').click()",class: "img-thumbnail img_prev", size: "400" %>
      </div>
      <div class="col-md-6">
        <div class="field">
          <%= f.label :name, "ニックネーム" %></br>
          <%= f.text_field :name, size: "40px" %>
        </div>
        <div class="field">
          <%= f.label :email, "メールアドレス" %></br>
          <%= f.email_field :email, size: "40px" %>
        </div>
        <div class="field">
          <%= f.label :introduction, "自己紹介文" %></br>
          <%= f.text_area :introduction, size: "40px" %>
        </div>
        <%= f.submit "更新する", class: "btn btn-outline-dark btn-sm" %>
        <%= link_to "退会する", user_unsubscribe_path, class: "btn btn-outline-dark btn-sm ml-4" %>
      </div>
      <% end %>
    </div>
  </div>
</div>